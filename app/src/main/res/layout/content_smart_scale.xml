<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:padding="@dimen/w3"
            android:text="Register"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/w25"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h5"
                android:layout_marginLeft="@dimen/w5"
                android:layout_marginRight="@dimen/w5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w15"
                    android:layout_height="@dimen/h4"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/login_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/strInputAccHint"
                    android:maxLength="30"
                    android:saveEnabled="true"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/font_28" />

                <ImageView
                    android:id="@+id/btn_delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_road_books_r"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="@dimen/h5"
                android:layout_marginLeft="@dimen/w5"
                android:layout_marginRight="@dimen/w5"
                android:background="@drawable/grey_line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/h5"
                android:layout_marginLeft="@dimen/w5"
                android:layout_marginRight="@dimen/w5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/w15"
                    android:layout_height="@dimen/h4"
                    android:src="@drawable/icon_password" />

                <EditText
                    android:id="@+id/login_edit_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/strInputPwdHint"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:saveEnabled="true"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/font_28" />

                <ImageView
                    android:id="@+id/btn_display_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/abc_btn_radio_to_on_mtrl_000"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="@dimen/h5"
                android:layout_marginLeft="@dimen/w5"
                android:layout_marginRight="@dimen/w5"
                android:background="@drawable/grey_line_horizontal" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="@dimen/w70"
                android:layout_height="@dimen/h7"
                android:layout_gravity="center"
                android:background="@drawable/btn_login_style"
                android:clickable="true"
                android:gravity="center"
                android:text="Log in"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_28" />


            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/h3"
                android:clickable="true"
                android:padding="@dimen/w3"
                android:text="Forgot Password"
                android:textColor="@color/orange"
                android:textSize="@dimen/font_28" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>